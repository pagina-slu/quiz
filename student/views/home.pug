doctype html
html
    head
        meta(charset='UTF-8')
        meta(http-equiv='X-UA-Compatible' content='IE=edge')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet' href='style/style.css')
        title p&agrave;gina quiz
        // Category selector
    body
        if message
            #status-messages-container
            script(src='../js/popup.js')
            script. 
                let message = !{JSON.stringify(questions)}
                addStatusMessage(message[0], message[1]);
        main#main
            #header-wrapper
                h1 Hi, #{username}
                div.notification
                    span Inbox
                    span.badge 3
                form(action='/logout' method='get')
                    input(type='submit' class='logout-button' value="logout")
            #title-wrapper
                span#title Classrooms
            #category-wrapper
                each value, key in classes
                    form(action='/test/'+key method='post')
                        input(type='submit' class='category-button' name="selected" value=value)
                
        // footer
        footer
            p p&agrave;gina &copy; 2022